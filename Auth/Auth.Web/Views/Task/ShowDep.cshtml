@using Webdiyer.WebControls.Mvc;
@model Webdiyer.WebControls.Mvc.PagedList<Auth.Model.DepartmentInfo>
@using Auth.Web
@{
    ViewBag.Title = "部门列表";
    Utils fun = new Utils();
}
<script type="text/javascript">
    $(document).ready(function () {

        $("#btnselect").bind("click", function () {
            var ids = "";
            var id;
            $("input[name='chk_list']:checked").each(function () {
                id = $(this).attr("title");
                if (id != undefined && id != null) {
                    ids += id + "|";
                }
            });
            if (ids == "") {
                alert("请勾选部门");
            } else {
                ids = ids.substring(0, ids.length - 1);
                window.returnValue = ids;
                window.close();
            }
        });
    });
</script>
<div class="page">
    <table border="0" width="70%" cellspacing="0" cellpadding="0">
        <tbody>
            <tr>
                <td>
                    <table class="tbsearch" width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tbody>
                            <tr>
                                <td>
                                    <span class="tabli_btn_ico">
                                    </span>查询条件
                                    <span id="errorMsg"></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="tbcontent">
                        @using (Ajax.BeginForm("ShowDep", new RouteValueDictionary { { "id", "" } }, new AjaxOptions { UpdateTargetId = "Dep", HttpMethod = "Get", InsertionMode = InsertionMode.Replace }, new RouteValueDictionary { { "id", "searchForm" } }))
                        {
                            <table class="tb tbbordertopleft" cellpadding="0" cellspacing="0" width="100%" border="0">
                                <tbody>
                                    <tr>
                                        <td width="5%" class="label">
                                            部门名称
                                        </td>
                                        <td width="15%">
                                            <input type="text" name="DepartmentInfoName" id="DepartmentInfoName" style="width:99%;height:22px"/>

                                        </td>

                                        <td width="5%" class="label"></td>
                                        <td width="15%"></td>
                                    </tr>
                                    <tr height="40">
                                        <td colspan="4">
                                            <div class="tbbtn center">
                                                <input type="submit" value="查询" style="width:65px; height:25px" />
                                                @*<input type="button" value="确定" id="btnselect" />*@
                                            </div>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                        }
                    </div>
                </td>
            </tr>
        </tbody>

    </table>

    <div style="height: 20px;">
    </div>


    <div id="Dep">
        @Html.Partial("_ShowDepSearchGet", Model)
    </div>
</div>




@section Scripts
{@{Html.RegisterMvcPagerScriptResource();}
<script type="text/javascript" src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>}


