@using Webdiyer.WebControls.Mvc;
@model Webdiyer.WebControls.Mvc.PagedList<Auth.Model.ClientInfo>
@using Auth.Web
@{
    ViewBag.Title = "认证记录列表";
    var fcn = new Utils();
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnclear").bind("click", function () {
            $("#ClientName").val("");
            $("#ClientDeviceID").val("");
            $("#ClientStatus").val("");
            $("#searchForm").submit();
        });

        //$("#hide").toggle(function () {
        //    $("#Searchcontent").hide();
        //},
        //    function () {
        //        $("#Searchcontent").show();
        //    }
        //);

    });
</script>
<div class="topinformationbox">
    <a>认证记录列表</a>

</div>
<div class="page">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tbody>
            <tr>
                <td>
                    <table class="tbsearch" width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tbody>
                            <tr>
                                <td id="hide">
                                    <span>
                                    </span>查询条件

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="tbcontent" id="Searchcontent">
                        @using (Ajax.BeginForm("Index", new RouteValueDictionary { { "id", "" } }, new AjaxOptions { UpdateTargetId = "client", HttpMethod = "Get", InsertionMode = InsertionMode.Replace }, new RouteValueDictionary { { "id", "searchForm" } }))
                        {
                            <table class="tb tbbordertopleft" cellpadding="0" cellspacing="0" width="100%" border="0">
                                <tbody>
                                    <tr>
                                        <td width="5%" class="label">
                                            终端名称
                                        </td>
                                        <td width="15%">
                                            <input name="ClientName" id="ClientName" style="width:99%;height:22px" />

                                        </td>

                                        <td width="5%" class="label">
                                            设备编号
                                        </td>
                                        <td width="15%">
                                            <input name="ClientDeviceID" id="ClientDeviceID" style="width:99%;height:22px"/>
                                        </td>

                                        <td width="5%" class="label">
                                            终端状态
                                        </td>
                                        <td width="15%">

                                            <div class="select_border" style="width:99%;height:22px">
                                                <select name="ClientStatus" id="ClientStatus" style="width:100%">
                                                    <option value="">全部</option>
                                                    <option value="验证通过">验证通过</option>
                                                    <option value="异常">异常</option>
                                                </select>
                                            </div>
                                        </td>

                                    </tr>
                                    <tr height="40">
                                        <td colspan="6">
                                            <div class="tbbtn center">
                                                <input type="submit" value="查询" style="width:65px; height:25px" />
                                                <input type="button" value="清空" id="btnclear" style="width:65px; height:25px" />
                                            </div>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                        }
                    </div>
                </td>
            </tr>

        </tbody>

    </table>

    <div style="height: 20px;">
    </div>

    <div id="client">
        @Html.Partial("_ClientSearchGet", Model)
    </div>
</div>
@section Scripts
{@{Html.RegisterMvcPagerScriptResource();}
<script type="text/javascript" src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>}


