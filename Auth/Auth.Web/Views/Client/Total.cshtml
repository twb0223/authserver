@using Webdiyer.WebControls.Mvc;
@model Webdiyer.WebControls.Mvc.PagedList<Auth.Web.Controllers.OlEntity>
@using Auth.Web
@{
    ViewBag.Title = "在线记录列表";
    var fcn = new Utils();
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnclear").bind("click", function () {
            $("#ProName").val("");
            $("#DepName").val("");
            $("#searchForm").submit();
        });

        //$("#hide").toggle(function () {
        //    $("#Searchcontent").hide();
        //},
        //    function () {
        //        $("#Searchcontent").show();
        //    }
        //);

    });
</script>
<div class="topinformationbox">
    <a>在线记录列表</a>

</div>
<div class="page">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tbody>
            <tr>
                <td>
                    <table class="tbsearch" width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tbody>
                            <tr>
                                <td id="hide">
                                    <span>
                                    </span>查询条件

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="tbcontent" id="Searchcontent">
                        @using (Ajax.BeginForm("Total", new RouteValueDictionary { { "id", "" } }, new AjaxOptions { UpdateTargetId = "Total", HttpMethod = "Get", InsertionMode = InsertionMode.Replace }, new RouteValueDictionary { { "id", "searchForm" } }))
                        {
                            <table class="tb tbbordertopleft" cellpadding="0" cellspacing="0" width="100%" border="0">
                                <tbody>
                                    <tr>
                                        <td width="10%" class="label">
                                            项目名称
                                        </td>
                                        <td >
                                            <input name="ProName" id="ProName" style="width:99%;height:22px" />

                                        </td>

                                        <td width="10%" class="label">
                                            部门名称
                                        </td>
                                        <td >
                                            <input name="DepName" id="DepName" style="width:99%;height:22px" />
                                        </td>

                                    </tr>
                                    <tr height="40">
                                        <td colspan="4">
                                            <div class="tbbtn center">
                                                <input type="submit" value="查询" style="width:65px; height:25px" />
                                                <input type="button" value="清空" id="btnclear" style="width:65px; height:25px" />
                                            </div>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                        }
                    </div>
                </td>
            </tr>

        </tbody>

    </table>

    <div style="height: 20px;">
    </div>

    <div id="Total">
        @Html.Partial("_TotalSearchGet", Model)
    </div>
</div>
@section Scripts
{@{Html.RegisterMvcPagerScriptResource();}
<script type="text/javascript" src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>}


